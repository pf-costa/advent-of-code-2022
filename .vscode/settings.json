{
  "typescript.tsdk": "node_modules/typescript/lib",
  "eslint.validate": [
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/coverage": true,
    "**/dist": true,
    "**/.yalc": true
  },
  "editor.tabSize": 4,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.enabled": true,
}